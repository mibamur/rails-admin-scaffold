= simple_form_for(<%= "[:#{prefix}, @#{singular_table_name}], html: { class: '#{singular_table_name}'} " %>) do |f|

  .form-inputs
  <%- attributes.each do |attribute| -%>
    = f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>
  <%- end -%>

  .form-actions
    = f.button :submit, 'Сохранить'